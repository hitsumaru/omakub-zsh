# File system
# Use --long para mais detalhes, ou --git para status do git
alias ls='eza --group-directories-first --icons=auto --git'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ff="fzf --preview 'bat --style=numbers --color=always {}' --no-ignore --hidden"
alias fd='fdfind'
alias cd='z'

# Directories
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias c='cd ~/.config'
alias dot='cd ~/.dotfiles' # Se vocÃª tiver uma pasta para dotfiles

# Tools
alias n='nvim'
alias g='git'
alias d='docker'
alias r='rails'
alias bat='batcat'
alias lg='lazygit'
alias ldc='lazydocker'

# Git
alias gs='git status -sb'
alias ga='git add .'
alias gaa='git add -A'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gca='git commit -a --amend'
alias gp='git push'
alias gpl='git pull'
alias gd='git diff'

# Pacman / Yay
alias psu='sudo pacman -Syu'
alias pss='pacman -Ss'
alias y='yay'
alias ys='yay -S'
alias ysu='yay -Syu'